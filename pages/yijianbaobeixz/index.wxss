/* pages/mendian/index.wxss */

page {
  background-color: #fafafa;
}

.mdtop {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  position: fixed;
  top: 0rpx;
}

.mdtopkb {
  width: 100%;
  height: 100rpx;
}

.mdtop-l {
  width: 670rpx;
  height: 70rpx;
  margin-left: 40rpx;
  border-radius: 35rpx;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mdtop-l-l {
  width: 80rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mdtop-l-l image {
  width: 30rpx;
  height: 30rpx;
}

.mdtop-l input {
  width: 500rpx;
  height: 70rpx;
  font-size: 30rpx;
}

.mdtop-r {
  height: 100%;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.bbcon {
  width: 100%;
  height: 170rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 35rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
}

.bbcon-l {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bbcon-r {
  width: 90rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #fff;
}

.bbcon-rcolor {
  background-color: #f1552f;
}

.bbcon-rcolor2 {
  background-color: #c9c9c9;
}

.bbcon-l-l {
  width: 190rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.bbcon-l-l image {
  width: 170rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.bbcon-l-r-t {
  height: 50rpx;
  font-size: 34rpx;
  color: #000;
}

.bbcon-l-r-b {
  font-size: 26rpx;
  color: #999;
}

.bottomkb {
  width: 100%;
  height: 100rpx;
}
