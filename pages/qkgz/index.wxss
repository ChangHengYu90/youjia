  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.content-t span{
  color: #999;
}
.content-b{
  width: 100%;
  font-size: 30rpx;
}
rich-text{
  font-size: 30rpx;
}
.bottomkb{
  width: 100%;
  height: 150rpx;
}
.bottom{
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff
}
.bottom view{
  width: 700rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
   background: -webkit-linear-gradient(left, #fe7139 , #f44832); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right,#fe7139 , #f44832); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #fe7139 , #f44832); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right,#fe7139 , #f44832); /* 标准的语法 */
  border-radius: 20rpx;
  color: #fff;
}
.bottom image{
  width: 50rpx;
  height: 45rpx;
  margin-right: 20rpx;
}