page{
  background-color: #fafafa;
}
.pic{
 width: 100%;
 height: 180rpx;
 padding: 0 35rpx;
 box-sizing: border-box;
 display: flex;
 justify-content: space-between;
 align-items: center;
 background-color: #fff;
 border-bottom: 1rpx solid #eee;
 margin-top: 20rpx;
}
.pic-l{
  font-size: 30rpx;
  color: #999;
}
.pic-r{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #eee;
}
.pic-r image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.name{
  width: 100%;
 height: 100rpx;
 padding: 0 35rpx;
 box-sizing: border-box;
 display: flex;
 justify-content: space-between;
 align-items: center;
 background-color: #fff;
 border-bottom: 1rpx solid #eee;
}
.name-r{
 font-size: 30rpx;
}
.xb{
  width: 400rpx;
  height: 100rpx
}
.picker{
  width: 400rpx;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  line-height: 100rpx;
  font-size: 30rpx;
}
.picker image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}