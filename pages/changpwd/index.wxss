/* pages/changpwd/index.wxss */
page{
  background-color: #f6fbf7;
}
.pwd{
  width: 100%;
  margin-top: 20rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 95rpx;

}
.pwdcon{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pwdcon2{
  width: 100%;
  height: 100rpx;

  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pwdcon-l{
  width: 155rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #222;
}
.pwdcon-r{
  width: 545rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.pwdcon-r input{
  width: 545rpx;
  height: 60rpx;
  font-size: 30rpx;
}
.submit{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.submit view{
  width: 560rpx;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  background-color: #ff7f00;
  border-radius: 20rpx;
  color: #fff;
}