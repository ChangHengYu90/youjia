
page {
  background-color: #fafafa;
}

.mdtop {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  position: fixed;
  top: 0rpx;
}

.mdtopkb {
  width: 100%;
  height: 100rpx;
}

.mdtop-l {
  width: 670rpx;
  height: 70rpx;
  margin-left: 40rpx;
  border-radius: 35rpx;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mdtop-l-l {
  width: 80rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mdtop-l-l image {
  width: 30rpx;
  height: 30rpx;
}

.mdtop-l input {
  width: 500rpx;
  height: 70rpx;
  font-size: 30rpx;
}

.mdtop-r {
  height: 100%;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.txl{
  width: 100%;
  height: 154rpx;
  padding: 0 35rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}
.txl-l-t{
  height: 45rpx;
  font-size: 32rpx;
  color: #000;
}
.txl-l-b{
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #999;
}
.txl-r{
  width: 90rpx;
  height: 45rpx;
  border-radius: 10rpx;
  background-color: #f2542f;
  font-size: 28rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center
}