  justify-content: space-between;
  align-items: center;
  padding: 0 35rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}

.tckcon-bcon-r {
  width: 90rpx;
  height: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color: #fff;
  border-radius: 10rpx;
