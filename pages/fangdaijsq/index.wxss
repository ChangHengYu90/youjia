page{
  background-color: #fafafa
}
.top{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  position: fixed;
  top: 0;
}
.topcon{
  width: 250rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.topcon-c{
  height: 84rpx;
   border-top: 2rpx solid #fff;
  border-bottom: 2rpx solid #fff;
  font-size: 30rpx;
  line-height: 86rpx;
}
.topcon-c2{
  height: 84rpx;
   border-top: 2rpx solid #fff;
  border-bottom: 2rpx solid #f75134;
  font-size: 30rpx;
  line-height: 86rpx;
  color: #f75134;
}
.topkb{
  width: 100%;
  height: 100rpx;
}
.bottomkb{
width: 100%;
  height: 140rpx;
}
.bottom{
width: 100%;
  height: 140rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fafafa
}
.bottom view{
  width: 700rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
   background: -webkit-linear-gradient(left, #fe7237, #f44832); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #fe7237, #f44832); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #fe7237, #f44832); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #fe7237, #f44832); /* 标准的语法 */
  border-radius: 10rpx;
}
.content{
  width: 100%;
  height: 96rpx;
  border-bottom: 1rpx solid #eee;
  padding: 0 35rpx;
  box-sizing: border-box;
  background-color: #fff;
 
}
.picker{
  width: 690rpx;
   display: flex;
  justify-content: space-between;
